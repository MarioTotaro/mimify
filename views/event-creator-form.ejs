<%- include ('partials/header') %>
<div class="container">
  <main>
    <div class="py-5 text-center">
      <img
        class="d-block mx-auto mb-4"
        src="/assets/images/icon/nft.png"
        alt=""
        width="82"
        height="77"
      />

      <h2>Create the token for your event!</h2>
      <p class="lead">
        Discover the future of events with our NFT tickets on blockchain! Offer
        your attendees a secure, unique and easily verifiable experience,
        eliminating fraud and facilitating authorised resale. Transform the way
        you run your events with the technology of the future.
      </p>
    </div>

    <div class="col-md-8 col-lg-12">
      <h4 class="mb-3">Owner Data</h4>
      <form
        id="eventCreatorNft"
        action="/upload"
        method="post"
        class="needs-validation"
        novalidate=""
      >
        <div class="row g-3">
          <div class="col-sm-6">
            <label for="firstName" class="form-label">First name</label>
            <input
              type="text"
              class="form-control"
              id="firstName"
              placeholder=""
              value=""
              required=""
            />
            <div class="invalid-feedback">Valid first name is required.</div>
          </div>

          <div class="col-sm-6">
            <label for="lastName" class="form-label">Last name</label>
            <input
              type="text"
              class="form-control"
              id="lastName"
              placeholder=""
              value=""
              required=""
            />
            <div class="invalid-feedback">Valid last name is required.</div>
          </div>

          <div class="col-12">
            <label for="email" class="form-label"
              >Email <span class="text-body-secondary">(Optional)</span></label
            >
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="you@example.com"
            />
            <div class="invalid-feedback">
              Please enter a valid email address for shipping updates.
            </div>
          </div>

          <h4 class="mb-3">Nft Data</h4>
          <div class="col-sm-6">
            <label for="tokenName" class="form-label">Event Name</label>
            <input
              type="text"
              class="form-control"
              id="tokenName"
              placeholder=""
              value=""
              required=""
            />
            <div class="invalid-feedback">Valid first name is required.</div>
          </div>

          <div class="col-sm-6">
            <label for="tokenSymbol" class="form-label">Token Symbol</label>
            <input
              type="text"
              class="form-control"
              id="tokenSymbol"
              placeholder=""
              value=""
              required=""
            />
            <div class="invalid-feedback">Valid last name is required.</div>
          </div>

          <div class="col-sm-6">
            <label for="tokenSupply" class="form-label">Token Supply</label>
            <input
              type="text"
              class="form-control"
              id="tokenSupply"
              placeholder=""
              value=""
              required=""
            />
            <div class="invalid-feedback">Valid token supply is required.</div>
          </div>

          <div class="col-sm-6">
            <label for="tokenImage" class="form-label">Collection Image</label>
            <input
              type="file"
              class="form-control"
              id="tokenImage"
              placeholder=""
              value=""
              required=""
            />
            <div class="invalid-feedback">Valid image is required.</div>
          </div>

          <div class="col-sm-12">
            <label class="form-label text-center fw-bold d-block"
              >Select an image as the background of your sales interface:</label
            >
            <div class="d-flex flex-wrap justify-content-center">
              <div class="form-check me-4">
                <input
                  class="form-check-input"
                  type="radio"
                  name="backgroundImage"
                  id="image1"
                  value="image1"
                  required
                />
                <label class="form-check-label" for="image1">
                  <img
                    src="/assets/images/form-images/form-img-1.webp"
                    alt="Image 1"
                    class="img-thumbnail"
                    height="100"
                    width="200"
                  />
                </label>
              </div>
              <div class="form-check me-4">
                <input
                  class="form-check-input"
                  type="radio"
                  name="backgroundImage"
                  id="image2"
                  value="image2"
                  required
                />
                <label class="form-check-label" for="image2">
                  <img
                    src="/assets/images/form-images/form-img-2.webp"
                    alt="Image 2"
                    class="img-thumbnail"
                    height="100"
                    width="200"
                  />
                </label>
              </div>
              <div class="form-check me-4">
                <input
                  class="form-check-input"
                  type="radio"
                  name="backgroundImage"
                  id="image3"
                  value="image3"
                  required
                />
                <label class="form-check-label" for="image3">
                  <img
                    src="/assets/images/form-images/form-img-3.webp"
                    alt="Image 3"
                    class="img-thumbnail"
                    height="100"
                    width="200"
                  />
                </label>
              </div>
              <div class="form-check me-4">
                <input
                  class="form-check-input"
                  type="radio"
                  name="backgroundImage"
                  id="image4"
                  value="image4"
                  required
                />
                <label class="form-check-label" for="image4">
                  <img
                    src="/assets/images/form-images/form-img-4.webp"
                    alt="Image 4"
                    class="img-thumbnail"
                    height="100"
                    width="200"
                  />
                </label>
              </div>
            </div>
            <div class="invalid-feedback">Please select an image.</div>
          </div>
        </div>
        <hr class="my-4" />
        <button
          id="submitButton"
          class="w-100 btn btn-primary btn-lg"
          type="submit"
        >
          Create NFT
        </button>
      </form>
    </div>
  </main>
</div>
<%-include ('partials/footer') %>
